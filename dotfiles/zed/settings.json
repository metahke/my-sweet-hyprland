// Zed settings
// documentation: https://zed.dev/docs/configuring-zed
// Zed's default settings: `zed: open default settings`

{
  // set defaults
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "format_on_save": "off",
  "soft_wrap": "editor_width",
  "wrap_guides": [80],
  "show_wrap_guides": true,
  "theme": "Ayu Dark",

  // delete telemery
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // delete/hide unnecessary features
  "project_panel": {
    "dock": "right"
  },
  "assistant": {
    "version": "2",
    "enabled": false
  },
  "collaboration_panel": {
    "button": false
  },
  "features": {
    "copilot": false,
    "inline_completion_provider": "none"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  }
}
